<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cliente-empresa</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://unpkg.com/jsgrid/dist/jsgrid.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/jsgrid/dist/jsgrid-theme.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/jsgrid/dist/jsgrid.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/newProject.css">
</head>
<body>
    <header class="header">
        <div class="row">
            <div class="col s1">
                <div class="logo-header"></div>
            </div>
        </div>
    </header>
    <div class="container">

                <div class="container px-4 text-center">
                    <div class="row gx-5">
                      <div class="col">
                       <div class="p-3"><form action="/admin/cliente-empresa/add-cliente" method="POST">
                        <section>
                            <div class="new-risks">
                                <h3 class="titulo-secciones">Clientes</h3>
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Agrega los clientes del proyecto:</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><input type="text" name="nuevoNombre" id="nuevo-nombre" class="new-risk-Nuevoriesgo" required></td>
                                            <td><button class="btn btn-success" type="submit">Agregar</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div id="jsGridClientes" class="no-materialize-checkbox"></div> <!-- Contenedor para Grid.js -->
                        </section>
                    </form></div>
                      </div>
                      <div class="col">
                        <div class="p-3"><form action="/admin/cliente-empresa/add-empresa" method="POST">
                            <section>
                                <div class="new-risks">
                                    <h3 class="titulo-secciones">Empresas</h3>
                                    <table>
                                        <thead>
                                            <tr>
                                                <th>Agrega las empresas del proyecto:</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><input type="text" name="newEmpresa" id="nuevo-nombre" class="new-risk-Nuevoriesgo" required></td>
                                                <td><button class="btn btn-success" type="submit">Agregar</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div id="jsGridEmpresas"></div> <!-- Contenedor para Grid.js -->
                            </section>
                        </form></div>
                      </div>
                    </div>
                  </div>
                
            </section>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const clientesTable = <%- clientesTable %>; 
            const empresasTable = <%- empresasTable %>;

            $("#jsGridClientes").jsGrid({
                height: "400px",
                width: "100%",
                sorting: true,
                filtering: true,
                editing: false,
                paging: false,

                data: clientesTable,
                controller: {
                    loadData: function(filter) {
                        return $.grep(clientesTable, function(eachData) {
                            return (!filter.nombreEncargado || eachData.nombreEncargado.indexOf(filter.nombreEncargado) > -1);
                        });
                    }
                },

                fields: [
                    { name: "nombreEncargado", type: "text", title: "Nombre del Encargado", width: 150},
                    { type: "control" }
                ]
            });

            $("#jsGridEmpresas").jsGrid({
                height: "400px",
                width: "100%",
                sorting: true,
                filtering: true,
                editing: false,
                paging: false,

                data: empresasTable,
                controller: {
                    loadData: function(filter) {
                        return $.grep(empresasTable, function(eachData) {
                            return (!filter.nombreEmpresa || eachData.nombreEmpresa.indexOf(filter.nombreEmpresa) > -1);
                        });
                    }
                },

                fields: [
                    { name: "nombreEmpresa", type: "text", title: "Nombre de la Empresa", width: 150},
                    { type: "control" }
                ]
            });

            // Add keyup event handler to filter inputs for both grids
            $(".jsgrid-filter-row input").on("keyup", function() {
                $("#jsGridClientes").jsGrid("loadData");
                $("#jsGridEmpresas").jsGrid("loadData");
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>