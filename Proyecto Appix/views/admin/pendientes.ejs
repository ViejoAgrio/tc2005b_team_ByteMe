<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pendientes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://unpkg.com/jsgrid/dist/jsgrid.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/jsgrid/dist/jsgrid-theme.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/newProject.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/jsgrid/dist/jsgrid.min.js"></script>
    <style>
        body {
            background-image: url('/images/fondoBlanco.png'); /* Asegúrate de que la ruta sea correcta */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="row">
            <div class="col s1">
                <div class="logo-header"></div>
            </div>
        </div>
    </header>
    <div class="container">
        <form action="/admin/pendientes/add" method="POST">
            <section>
                <div class="new-risks">
                    <h3 class="titulo-secciones">Pendientes</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Agrega los pendientes del proyecto:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="text" name="nuevoNombre" id="nuevo-nombre" class="new-risk-Nuevoriesgo" required></td>
                                <td><button class="waves-effect waves-light btn button" type="submit">Agregar</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="jsGridAcc" class="no-materialize-checkbox"></div> <!-- Contenedor para Grid.js -->
            </section>
        </form>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const pendientesTable = <%- pendientesTable %>; 
            console.log('pendientes table:', pendientesTable);

            $("#jsGridAcc").jsGrid({
                height: "400px",
                width: "100%",
                sorting: true,
                filtering: true,
                editing: true,
                paging: true,
                pageSize: 10,
                pageButtonCount: 5, 
                deleteConfirm: "Si continuas, este pendiente será eliminado de todos los proyectos, ¿Está seguro de que desea eliminar este pendiente?",

                data: pendientesTable,
                controller: {
                    loadData: function(filter) {
                        return $.grep(pendientesTable, function(eachData) {
                            return (!filter.descripcionAccion || eachData.descripcionAccion.indexOf(filter.descripcionAccion) > -1);
                        });
                    },
                    updateItem: function(item) {
                        console.log("Datos que se envían para actualización:", item);
                        return $.ajax({
                            type: "POST",
                            url: "/admin/pendientes/update-pendiente",
                            contentType: "application/json",
                            data: JSON.stringify({
                                idAccion: item.idAccion,
                                descripcionAccion: item.descripcionAccion
                            }),
                            dataType: "json"
                        }).done(function(response) {
                            console.log("Respuesta del servidor:", response);
                            var updatedItem = response.pendiente;
                            var itemIndex = pendientesTable.findIndex(data => data.idAccion === updatedItem.idAccion);
                            if (itemIndex !== -1) {
                                pendientesTable[itemIndex] = updatedItem;
                            }
                            $("#jsGridAcc").jsGrid("loadData"); 
                        }).fail(function(jqXHR, textStatus, errorThrown) {
                            console.error("Error en la solicitud AJAX:", textStatus, errorThrown);
                        });
                    },
                    deleteItem: function(item) {
                        console.log('Eliminandoooooo');
                        return $.ajax({
                            type: "POST",
                            url: "/admin/pendientes/delete-pendiente",
                            data: item
                        });
                    }
                },
                fields: [
                    { name: "idAccion", type: "hidden", css: "hide" },
                    { name: "descripcionAccion", type: "text", title: "Descripción", width: 150 },
                    { type: "control" }
                ]
            });

            // Add keyup event handler to filter inputs
            $(".jsgrid-filter-row input").on("keyup", function() {
                $("#jsGridAcc").jsGrid("loadData");
            });
        });
    </script>
</body>
</html>
